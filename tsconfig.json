{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "tldjs": [
        "jslib/src/misc/tldjs.noop"
      ],
      "jslib/*": [
        "jslib/src/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": true
  },
  "include": [
    "src"
  ]
}
